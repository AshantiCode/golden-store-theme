<div class="page-width">
  {% if section.settings.title != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.title | escape }}</h2>
    </div>
  {% endif %}
  <div>
    {% for member in section.blocks %}
      <div class="grid__item medium-up--one-half" style="margin-top: 50px;">
				{% if member.settings.image != blank%}
					{{ member.settings.image | img_url: "x300" | img_tag}}
				{% else %}
					{{ 'product-4' | placeholder_svg_tag: 'placeholder-svg' | svg_url: "small" }}
				{% endif %}
      <h3>{{member.settings.name}}</h3>
      <span>{{member.settings.title}}</span>
      <p>{{member.settings.bio}}</p>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Team Members",
  "class": "team-members-section",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Section Title",
      "default": "Meet Our Team"
    }
  ],
  "blocks": [
    {
      "name": "Team Member",
      "type": "member",
      "settings": [
				{
					"id": "image",
					"type": "image_picker",
					"label": "Image"
				},
        {
          "id": "name",
          "type": "text",
          "label": "Name"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Job Title"
        },
        {
          "id": "bio",
          "type": "textarea",
          "label": "Bio"
        }
			]
    }
	],
	"presets": [
		{
			"category": "Store Information",
			"name": "Team Members"
		}
	]
}
{% endschema %}